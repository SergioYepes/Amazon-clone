      //     "showTotal": true,
      //     "showDeliveryTotal": false
      //   }
      // },
      //-- Logo y texto

      "logo#header-sticky2--cart":{
        "title":"minicart logo",
        "props":{
          // "id":"vuitg-orders",
          "url": "assets/svg/carrito.svg",
          "width":"40"
        }
      },
      "rich-text#minicart-empty--text":{
        "title":"Tu carrito esta vacio, te invitamos a llenarlo",
        "props":{
          "text":"Tu carrito esta vacio, te invitamos a llenarlo",
          "textAlignment":"CENTER",
          "textPosition":"CENTER",
          "blockClass":"rich-text--homeInfo"
        }
      },
      "rich-text#cesta":{
        "title":"Cesta",
        "props":{
            "text":"Cesta"
        }
      },



      //-- lista del producto
      "minicart-product-list":{
        "title":"minicart list",
        "blocks": [
          "product-list#minicart"
        ]
      },
      "product-list#minicart":{
        "title":"minicart product list",
        "blocks": [
          "product-list-content-desktop"
        ]
      },
      "product-list-content-desktop":{
        "title":"minicart product list content",
        "children":[
          "flex-layout.row#minicartP--Desktop"
        ]
      },
      "flex-layout.row#minicartP--Desktop":{
        "title":"minicart product list cont",
        "children":[
          "flex-layout.col#minicartP--Imagen",
          "flex-layout.col#minicartP--Info",
          "flex-layout.row#minicartP--remove"
        ],
        "props":{
          "fullWidth": true,
          "paddingBottom": "7",
          "paddingTop": "6",
          "colSizing": "auto",
          "blockClass":"minicartProducts-desktop"
        }
      },
      "flex-layout.col#minicartP--Imagen":{
        "title":"minicart product list image",
        "children":[
          "product-list-image"
        ],
        "props": {
          "marginRight": "6"
        }
      },
      "flex-layout.col#minicartP--Info":{
        "title":"minicart product list info block",
        "children":[
          "vtex.product-list:product-name",
          "price"
        ],
        "props": {
          "width": "grow",
          "blockClass":"minicartProducts-content"
        }
      },
      "flex-layout.row#minicartP--remove":{
        "title":"minicart product list remove",
        "children":[
          "quantity-selector#minicart",
          "remove-button"
        ],
        "props": {
          "colSizing":"auto"
        }
      },
      "quantity-selector#minicart":{
        "title":"minicart product list quantity",
        "props":{
          "mode":"default"
      }
      }
}