{
    "minicart.v2":{
        "title":"minicart",
        "props": {
          "MinicartIcon": "logo#header-sticky2--cart",
          "variation":"drawer",
          "itemCountMode":"total",
          "quantityDisplay":"always"
        },
        "children":[
          "flex-layout.row#minicart-header",
            "minicart-base-content",
            "flex-layout.row#minicart-footer"
            // "rich-text#cesta"
        ]
      },
      "minicart-base-content":{
        "title":"minicart base",
        "blocks": [
            "minicart-empty-state"
        ],
        "children":[
            "minicart-product-list"
        ]
      },
      "minicart-empty-state":{
        "title":"minicart empty",
        "children":[
            "flex-layout.row#minicart-empty"
        ]
      },
      "flex-layout.row#minicart-empty":{
        "title":"minicart empty block",
        "children":[
            "flex-layout.col#minicart-empty"
        ]
      },
      "flex-layout.col#minicart-empty":{
        "title":"minicart empty cont",
        "children":[
            "icon-cart#minicart-empty--icon",
            "rich-text#minicart-empty--text"
        ]
      },
      "icon-cart#minicart-empty--icon":{
        "title":"minicart empty icon",
        "props":{
            "size":100
        }
      },
        

      // -- header
      "flex-layout.row#minicart-header":{
        "title":"minicart header block",
        "children":[
            "flex-layout.col#minicart-header"
          ],
          "props":{
            "horizontalAlign": "center",
            "colSizing":"auto"
          }
        },
        "flex-layout.col#minicart-header":{
          "title":"minicart header cont",
          "children":[
            "rich-text#minicart-title",
            // "minicart-summary",
            "minicart-checkout-button"
          ]
        },
      "rich-text#minicart-title":{
        "title":"subtotal",
        "props":{
          "text":"### Subtotal",
          "blockClass":"minicartTitle"
        }
      },

      //---footer
      
        "flex-layout.row#minicart-footer":{
        "title":"minicart footer block",
        "children":[
            "flex-layout.col#minicart-footer"
          ]
        },
        "flex-layout.col#minicart-footer":{
          "title":"minicart footer cont",
          "children":[
            
          ]
      },
        "minicart-checkout-button": {
          "props": {
            "finishShoppingButtonLink": "/checkout/#/orderform"
        }
      },
    
      // "minicart-summary": {
      //   "title":"minicart footer summary",
      //   "blocks": ["checkout-summary.compact#minicart"]
      // },
